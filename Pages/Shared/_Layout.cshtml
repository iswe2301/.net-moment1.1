<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorApp.styles.css" asp-append-version="true" />
</head>

<body>

    <!-- Header -->
    <header class="bg-light border-bottom py-3">
        <div class="container d-flex header">
            <h1 class="me-auto logo"><a asp-page="/index">RazorApp</a></h1>
            <!-- Skriver ut datum dynamiskt -->
            <div class="text-muted date">Dagens datum är: @DateTime.Now.ToString("yyyy-MM-dd")</div>
        </div>
    </header>


    <div class="container mt-3">
        <div class="row content">
            <!-- Meny i sidebar -->
            <nav class="col-md-3 col-sm-12 sidebar">
                <ul class="list-group">
                    <!-- Aktiv länk får klassen "active" -->
                    <li
                        class="list-group-item @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")">
                        <a asp-page="/index">Start</a>
                    </li>
                    <li
                        class="list-group-item @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Razor" ? "active" : "")">
                        <a asp-page="/razor">Razor</a>
                    </li>
                    <li
                        class="list-group-item @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Om" ? "active" : "")">
                        <a asp-page="/om">Om sidan</a>
                    </li>
                </ul>
            </nav>
            <!-- Huvudinnehåll i högerkolumn -->
            <main class="col-md-9 col-sm-12">
                @RenderBody() <!-- Renderar innehåll från sidor -->
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="container bg-light border-top text-center py-3 mt-4">
        <p class="text-muted">Av Isa Westling - Kontakta mig via e-post: iswe2301@student.miun.se</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
